{
	"name":"OneDrive",
	"description":"Microsoft OneDrive storage service provider.",
	"authorize_request":
	{
		"uri":"https://login.live.com/oauth20_authorize.srf",
		"method":"GET"
	},
	"token_request":
	{
		"uri":"https://login.live.com/oauth20_token.srf",
		"method":"POST"
	},
	"grant_type":"AUTHORIZATION_CODE_GRANT",
	"client_id":"00000000400ECF3A",
	"client_secret":"GlPTCgir1pn35eaXlqe29avCnVmSNg5i",
	"redirect_uri":"https://home.zcu.cz/~stanek0j/multicloud",
	"scope":"wl.skydrive_update,wl.offline_access",
	"chunked_upload":false,
	"chunked_download":true,
	"root_folder":
	{
		"id":"me/skydrive"
	},
	"account_info_request":
	{
		"uri":"https://apis.live.net/v5.0/me",
		"method":"GET"
	},
	"account_quota_request":
	{
		"uri":"https://apis.live.net/v5.0/me/skydrive/quota",
		"method":"GET",
		"mapping":
		{
			"totalBytes":"quota",
			"freeBytes":"available"
		}
	},
	"download_file_request":
	{
		"uri":"https://apis.live.net/v5.0/<id>/content",
		"method":"GET"
	},
	"upload_file_finish_request":
	{
		"uri":"https://apis.live.net/v5.0/<id>/files/<name>",
		"method":"PUT",
		"auth_param":"access_token",
		"params":
		{
			"overwrite":"<overwrite>"
		},
		"body":"<data>"
	},
	"create_dir_request":
	{
		"uri":"https://apis.live.net/v5.0/<id>",
		"method":"POST",
		"headers":
		{
			"Content-Type":"application/json"
		},
		"json_body":
		{
			"name":"<name>"
		}
	},
	"list_dir_request":
	{
		"uri":"https://apis.live.net/v5.0/<id>/files",
		"method":"GET",
		"mapping":
		{
			"content":"data",
			"parent":"parent_id",
			"stringFileType":"type"
		}
	},
	"rename_request":
	{
		"uri":"https://apis.live.net/v5.0/<id>",
		"method":"PUT",
		"headers":
		{
			"Content-Type":"application/json"
		},
		"json_body":
		{
			"name":"<name>"
		}
	},
	"copy_request":
	{
		"uri":"https://apis.live.net/v5.0/<source_id>",
		"method":"COPY",
		"headers":
		{
			"Content-Type":"application/json"
		},
		"json_body":
		{
			"destination":"<destination_id>"
		}
	},
	"move_request":
	{
		"uri":"https://apis.live.net/v5.0/<source_id>",
		"method":"MOVE",
		"headers":
		{
			"Content-Type":"application/json"
		},
		"json_body":
		{
			"destination":"<destination_id>"
		}
	},
	"delete_request":
	{
		"uri":"https://apis.live.net/v5.0/<id>",
		"method":"DELETE",
		"auth_param":"access_token"
	},
	"search_request":
	{
		"uri":"https://apis.live.net/v5.0/me/skydrive/search",
		"method":"GET",
		"params":
		{
			"q":"<query>"
		},
		"mapping":
		{
			"content":"data",
			"parent":"parent_id",
			"stringFileType":"type"
		}
	},
	"metadata_request":
	{
		"uri":"https://apis.live.net/v5.0/<id>",
		"method":"GET",
		"mapping":
		{
			"content":"data",
			"parent":"parent_id",
			"stringFileType":"type"
		}
	}
}